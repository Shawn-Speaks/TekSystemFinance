<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/swipe_frag_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <ImageView
        android:id="@+id/background_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/frag_linear"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:layout_margin="8dp">

        <TextView
            android:text="@string/filler_text"
            android:id="@+id/frag_track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/search_vh_text_size_track_name"
            />

        <TextView
            android:text="@string/filler_text"
            android:id="@+id/frag_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/search_vh_text_size_artist_name"/>

        <TextView
            android:id="@+id/frag_album_name"
            android:text="@string/filler_text"
            android:textSize="@dimen/search_vh_text_size_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/lyrics_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"/>


    </LinearLayout>

</FrameLayout>